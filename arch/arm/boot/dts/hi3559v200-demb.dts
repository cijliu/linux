/dts-v1/;
#include "hi3559v200.dtsi"

/ {
	model = "Hisilicon HI3559V200 DEMO Board";
	compatible = "hisilicon,hi3559v200";

	memory {
		device_type = "memory";
		reg = <0x82000000 0x20000000>;/* system memory base */
	};
};

&uart0 {
	status = "okay";
};

&i2c_bus3 {
    status = "okay";
    clock-frequency = <100000>;
};

&i2c_bus7 {
    status = "okay";
    clock-frequency = <100000>;
};

#ifndef CONFIG_ARCH_HISI_BVT_AMP
