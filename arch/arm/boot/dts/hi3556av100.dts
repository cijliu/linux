/dts-v1/;
#include "hi3556av100.dtsi"

/ {
	model = "Hisilicon Hi3556AV100 AMP Board";
	compatible = "hisilicon,hi3556av100";

	chosen {
		bootargs = "console=ttyAMA0,115200 early_printk root=/dev/mtdblock2 rootfstype=jffs2 mtdparts=hi_sfc:1M(boot),4M(kernel),11M(rootfs)";
	};

	cpus {
		#address-cells = <1>;
		#size-cells = <0>;

		cpu@0 {
			compatible = "arm,cortex-a53";
			device_type = "cpu";
			reg = <0>;
			cci-control-port = <&cci_control0>;
		};
	};

	memory {
		device_type = "memory";
		reg = <0x32000000 0x10000000>;
	};
};

&ipcm {
	status = "okay";
};

